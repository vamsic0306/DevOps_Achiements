  },
  "verb": "delete",
  "objectRef": {
    "resource": "pods",
    "namespace": "default",
    "name": "nginx"
  }
}

step-2: Query
fields @timestamp,
       user = parse_json(@message).user.username,
       verb = parse_json(@message).verb,
       resource = parse_json(@message).objectRef.resource,
       namespace = parse_json(@message).objectRef.namespace
| filter verb = "delete"
| sort @timestamp desc
| limit 3

